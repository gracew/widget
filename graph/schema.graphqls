# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type API {
  id: ID!
  name: String!
  deploys: [Deploy!]!
}

enum Environment {
  SANDBOX
  STAGING
  PRODUCTION
}

type Deploy {
  id: ID!
  apiID: ID!
  env: Environment!
}

type Query {
  # TODO(gracew): page this
  apis: [API!]!
}

input NewAPI {
  name: String!
}

input DeployAPI {
  apiID: ID!
  env: Environment!
}

type Mutation {
  createAPI(input: NewAPI!): API!
  deployAPI(input: DeployAPI!): Deploy!
}